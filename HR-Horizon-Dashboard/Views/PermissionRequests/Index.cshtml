@using HR_Horizon.Core.Entities

@model IEnumerable<PermissionRequest>

<div class="col-12">
    <div class="card card-round">
        <div class="card-header">
            <div class="card-head-row card-tools-still-right">
                <div class="card-title">Permissions Requests</div>
                <div class="card-tools">
                    <div class="dropdown">
                        <button class="btn btn-icon btn-clean me-0"
                                type="button"
                                id="dropdownMenuButton"
                                data-bs-toggle="dropdown"
                                aria-haspopup="true"
                                aria-expanded="false">
                            <i class="fas fa-ellipsis-h"></i>
                        </button>
                        <div class="dropdown-menu"
                             aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" asp-controller="PermissionReq" asp-action="create">Create New</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <!-- Projects table -->
                <table class="table align-items-center mb-0">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Employee Name
                            <th scope="col" class="text-end">Day Of Week</th>
                            <th scope="col" class="text-end">Date</th>
                            <th scope="col" class="text-end">From</th>
                            <th scope="col" class="text-end">To</th>
                            <th scope="col" class="text-end">Status</th>
                            <th scope="col" class="text-end">View</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() == 0)
                        {
                            <tr>
                                <td class="text-end">No items added yet</td>
                            </tr>
                        }else{
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td scope="row">
                                    <a asp-action="Profile" asp-controller="Employees" asp-route-id="@item.EmployeeId">@item.Employee.FullName</a>
                                </td>
                                <td class="text-end">@item.RequestedDate.ToString()</td>
                                <td class="text-end">@item.TimeFrom</td>
                                <td class="text-end">@item.TimeTo</td>
                                <td class="text-end">Padding</td>
                                <td class="text-end">
                                    @if (item.RequestStatusId != null)
                                    {
                                        <span class="badge badge-@item.RequestStatus?.BootstrapColor">@item.RequestStatus?.Name</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-warning">Padding</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Respond" asp-controller="PermissionReq" asp-route-id="@item.Id" class="float-end btn btn-icon btn-sm me-2">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>