@model HR_Horizon.Core.Entities.Employee


@{
    ViewBag.Title = "Employee Details";
}

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-0">Employee Details</h2>
@*                     <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="#" class="text-decoration-none">Home</a></li>
                            <li class="breadcrumb-item"><a href="#" class="text-decoration-none">Employees</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Details</li>
                        </ol>
                    </nav> *@
                </div>
                <div>
                    <a asp-action="index" class="btn btn-outline-secondary me-2">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <a asp-action="details" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Employee Profile Card -->
    <div class="row">
        <div class="col-lg-4 col-md-5">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <!-- Profile Image -->
                    <div class="mb-3">
                        @if (!string.IsNullOrEmpty(Model.ProfileImageURL))
                        {
                            <img src="@Model.ProfileImageURL" 
                                 alt="@Model.FullName" 
                                 class="rounded-circle img-fluid shadow"
                                 style="width: 120px; height: 120px; object-fit: cover;">
                        }
                        else
                        { 
                            <div class="rounded-circle bg-light d-flex align-items-center justify-content-center mx-auto shadow"
                                 style="width: 120px; height: 120px;">
                                <i class="fas fa-user fa-3x text-muted"></i>
                            </div>
                         } 
                    </div>

                    <!-- Basic Info -->
                    <h4 class="card-title mb-1">@Model.FullName</h4>
                    <p class="text-muted mb-2">@Model.Position</p>
                    
                    <!-- Status Badge -->
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success mb-3">
                            <i class="fas fa-check-circle me-1"></i>Active
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-danger mb-3">
                            <i class="fas fa-times-circle me-1"></i>Inactive
                        </span>
                    }

                    <!-- Quick Contact -->
                    <div class="d-grid gap-2">
                        @if (!string.IsNullOrEmpty(Model.Email))
                        {
                            <a href="mailto:@Model.Email" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-envelope me-1"></i>Send Email
                            </a>
                        }
  @*                       @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                        {
                            <a href="tel:@Model.PhoneNumber" class="btn btn-outline-success btn-sm">
                                <i class="fas fa-phone me-1"></i>Call
                            </a>
                        } *@
                    </div>
                </div>
            </div>
        </div>

        <!-- Employee Details -->
        <div class="col-lg-8 col-md-7">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2 text-primary"></i>Employee Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Personal Information -->
                        <div class="col-md-6 mb-4">
                            <h6 class="text-uppercase text-muted fw-bold mb-3">Personal Information</h6>
                            
                            <div class="mb-3">
                                <label class="form-label text-muted small">Full Name</label>
                                <div class="fw-semibold">@Model.FullName</div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label text-muted small">Gender</label>
                                <div class="fw-semibold">
                                    @if (Model.Gender == 'M')
                                    {
                                        <span><i class="fas fa-mars text-info me-1"></i>Male</span>
                                    }
                                    else if (Model.Gender == 'F')
                                    {
                                        <span><i class="fas fa-venus text-pink me-1"></i>Female</span>
                                    }
                                    else
                                    {
                                        <span>@Model.Gender</span>
                                    }
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.Email))
                            {
                                <div class="mb-3">
                                    <label class="form-label text-muted small">Email Address</label>
                                    <div class="fw-semibold">
                                        <i class="fas fa-envelope text-muted me-2"></i>
                                        <a href="mailto:@Model.Email" class="text-decoration-none">@Model.Email</a>
                                    </div>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                            {
                                <div class="mb-3">
                                    <label class="form-label text-muted small">Phone Number</label>
                                    <div class="fw-semibold">
                                        <i class="fas fa-phone text-muted me-2"></i>
                                        <a href="tel:@Model.PhoneNumber" class="text-decoration-none">@Model.PhoneNumber</a>
                                    </div>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(Model.Address))
                            {
                                <div class="mb-3">
                                    <label class="form-label text-muted small">Address</label>
                                    <div class="fw-semibold">
                                        <i class="fas fa-map-marker-alt text-muted me-2"></i>@Model.Address
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Employment Information -->
                        <div class="col-md-6 mb-4">
                            <h6 class="text-uppercase text-muted fw-bold mb-3">Employment Information</h6>
                            
                            <div class="mb-3">
                                <label class="form-label text-muted small">Position</label>
                                <div class="fw-semibold">
                                    <i class="fas fa-briefcase text-muted me-2"></i>@Model.Position
                                </div>
                            </div>

                            @if (Model.Department != null)
                            {
                                <div class="mb-3">
                                    <label class="form-label text-muted small">Department</label>
                                    <div class="fw-semibold">
                                        <i class="fas fa-building text-muted me-2"></i>@Model.Department.Name
                                    </div>
                                </div>
                            }

                            @if (Model.Manager != null)
                            {
                                <div class="mb-3">
                                    <label class="form-label text-muted small">Manager</label>
                                    <div class="fw-semibold">
                                        <i class="fas fa-user-tie text-muted me-2"></i>
                                        <a href="#" class="text-decoration-none">@Model.Manager.FullName</a>
                                    </div>
                                </div>
                            }

                            @if (Model.EmploymentType != null)
                            {
                                <div class="mb-3">
                                    <label class="form-label text-muted small">Employment Type</label>
                                    <div class="fw-semibold">
                                        <i class="fas fa-clock text-muted me-2"></i>@Model.EmploymentType.Name
                                    </div>
                                </div>
                            }

                            @if (Model.EmploymentStatus != null)
                            {
                                <div class="mb-3">
                                    <label class="form-label text-muted small">Employment Status</label>
                                    <div class="fw-semibold">
                                        <i class="fas fa-info-circle text-muted me-2"></i>@Model.EmploymentStatus.Name
                                    </div>
                                </div>
                            }

                            @if (Model.JoiningDate.HasValue)
                            {
                                <div class="mb-3">
                                    <label class="form-label text-muted small">Joining Date</label>
                                    <div class="fw-semibold">
                                        <i class="fas fa-calendar-alt text-muted me-2"></i>@Model.JoiningDate.Value.ToString("MMMM dd, yyyy")
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Additional Information -->
                    <div class="row mt-3">
                        <div class="col-12">
                            <hr class="my-4">
                            <h6 class="text-uppercase text-muted fw-bold mb-3">System Information</h6>
                            <div class="row">
                                <div class="col-md-4">
                                    <small class="text-muted">Employee ID</small>
                                    <div class="fw-semibold">#@Model.Id</div>
                                </div>
                                <div class="col-md-4">
                                    <small class="text-muted">Created Date</small>
                                    <div class="fw-semibold">@Model.AddedOn.ToString("MMM dd, yyyy")</div>
                                </div>
                                <div class="col-md-4">
                                    <small class="text-muted">Added By</small>
                                    <div class="fw-semibold">@Model.AddedBy</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">Quick Actions</h6>
                            <small class="text-muted">Manage employee information</small>
                        </div>
                        <div>
                            <a href="#" class="btn btn-outline-primary me-2">
                                <i class="fas fa-edit"></i> Edit Employee
                            </a>
                            <a href="#" class="btn btn-outline-info me-2">
                                <i class="fas fa-print"></i> Print Details
                            </a>
                            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                <i class="fas fa-trash"></i> Delete Employee
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong>@Model.FullName</strong>?</p>
                <p class="text-muted small">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger">Delete Employee</button>
            </div>
        </div>
    </div>
</div>

<style>
    .text-pink {
        color: #e91e63 !important;
    }
    
    .card {
        transition: transform 0.2s ease-in-out;
    }
    
    .card:hover {
        transform: translateY(-2px);
    }
    
    .badge {
        font-size: 0.85em;
    }
    
    .form-label {
        font-weight: 600;
        margin-bottom: 0.25rem;
    }
    
    .fw-semibold {
        font-weight: 600 !important;
    }
</style>