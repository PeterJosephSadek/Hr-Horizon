@model HR_Horizon_Dashboard.ViewModels.RegisterViewModel

@{
    Layout = "_LoginLayout";
    ViewBag.Title = "Regsiter";
    var roles = ViewBag.Roles as List<Microsoft.AspNetCore.Identity.IdentityRole>;
}

    <!-- Main Section-->
    <section class="d-flex justify-content-center align-items-start vh-100 py-5 px-3 px-md-0">

        <!-- Login Form-->
        <div class="d-flex flex-column w-100 align-items-center">

            <!-- Logo-->
            <a asp-action="index" asp-controller="Home" class="d-table mt-5 mb-4 mx-auto">
                <div class="d-flex align-items-center">
                    <svg class="f-w-5 me-2 text-primary d-flex align-self-center lh-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 203.58 182"><path d="M101.66,41.34C94.54,58.53,88.89,72.13,84,83.78A21.2,21.2,0,0,1,69.76,96.41,94.86,94.86,0,0,0,26.61,122.3L81.12,0h41.6l55.07,123.15c-12-12.59-26.38-21.88-44.25-26.81a21.22,21.22,0,0,1-14.35-12.69c-4.71-11.35-10.3-24.86-17.53-42.31Z" fill="currentColor" fill-rule="evenodd" fill-opacity="0.5" /><path d="M0,182H29.76a21.3,21.3,0,0,0,18.56-10.33,63.27,63.27,0,0,1,106.94,0A21.3,21.3,0,0,0,173.82,182h29.76c-22.66-50.84-49.5-80.34-101.79-80.34S22.66,131.16,0,182Z" fill="currentColor" fill-rule="evenodd" /></svg>
                    <span class="fw-black text-uppercase tracking-wide fs-6 lh-1">Horizon</span>
                </div>
            </a>
            <!-- Logo-->

            <div class="shadow-lg rounded p-4 p-sm-5 bg-white form mb-4">
                <!-- Register Form-->
                <form class="mt-4" method="post" asp-action="register" asp-controller="users" >
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="UserName" class="form-label" >Username</label>
                        <input asp-for="UserName" type="text" class="form-control" id="register-fname" placeholder="Username">
                        <span asp-validation-for="UserName" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="form-label" >Password</label>
                        <input asp-for="Password" class="form-control" id="register-lname" placeholder="********">
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="********">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                    </div>

                <label asp-for="Role">Select Role</label>
                <select asp-for="Role" class="form-control">
                         <option value="">-- Select a Role --</option>
                    @foreach (var role in roles)
                         {
                             <option value="@role.Name">@role.Name</option>
                         }
                     </select>

                    <button type="submit" class="btn btn-primary d-block w-100 my-4">Sign Up</button>
                </form>
                <!-- / Register Form-->

                <p class="d-block text-center text-muted small">
                    Already registered? <a class="text-muted text-decoration-underline" asp-action="login" asp-controller="users">Login here.</a>
                </p>
            </div>
        </div>
        <!-- / Login Form-->

    </section>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }